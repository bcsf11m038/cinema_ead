@model Cinema.Models.MovieTiming      

 <div id="content">
        <div class="line-hor"></div>
        <div class="box">
          <div class="border-right">
            <div class="border-left">
              <div class="inner">
                <h3>@Model.m.Name</h3>
                <div class="img-box1 alt"><img src="@Url.Action("show","Admin",new{id =Model.m.Id})" alt="" />
                    
                    <br />
                    <label>Director: @Model.m.Director</label><br />
                    <label>Type: @Model.m.Type</label><br />
                    <label>Ratings: @ViewBag.avg</label><br />
                    <label>Genre: @Model.m.Genre</label><br />
                    <label>Release Date: @Model.t.Sdate</label><br /><br />

                    Description: @Model.m.Description
                </div>
                  <div class="content" >
        <ul class="list">
        @foreach (var x in @Model.m.Reviews )
        {
            <li><h5>@x.user :</h5><p> @x.review1</p></li>
        }
        </ul>
    </div>
                  </div>
            </div>
          </div>
        </div>
     <div class="content">
          <h3>User <span>Review</span></h3>
          <form id="contacts-form" method="post" action="~/Home/submitComment">
            <fieldset>
              <div class="field">
                <label>Name:</label>
                <input type="text" name="r.User"/>
              </div>
              <div class="field">
                <label>E-mail:</label>
                <input type="text" name="r.Email"/>
              </div>
              <div class="field">
                <label>Ratings:</label>
                <input type="text" name="r.rating"/>
              </div>
                <input type="hidden" name="r.movieId" value="@Model.m.Id"/>
                  
              <div class="field">
                <label>Comments:</label>
                  <textarea cols="1" rows="1" name="r.review1"></textarea>
              </div>
              <input class="myButton" type ="submit" value="Submit" style="float:right;margin-right:100px;width:100px"/>
        </fieldset>
          </form>
        </div>